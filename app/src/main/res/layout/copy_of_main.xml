        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow >

            <TextView
                android:padding="3dip"
                android:text="Resume Development Tips" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="-->" />
        </TableRow>

       
        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow >

            <TextView
                android:padding="3dip"
                android:text="Cover Letter Writing Tips" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
