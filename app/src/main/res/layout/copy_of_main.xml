                android:text="Roo Career Network" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="-->" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow >

            <TextView
                android:padding="3dip"
                android:text="Career Advising/Counseling" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="-->" />
